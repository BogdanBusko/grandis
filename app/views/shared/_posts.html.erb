<% posts.each do |post| %>
  <div class="mb-4">
    <%= turbo_frame_tag(dom_id(post)) do %>
      <h2><%= link_to post.title, post_path(post) %></h2>
      <p>
        <%= post.body %>
      </p>
      <div>
        <%= l(post.created_at, format: :short) %>
      </div>
    <% end %>
  </div>
<% end %>

<div class="mt-3">
  <%== pagy_bootstrap_nav(pagy) %>
</div>
